<%= form_for @user do |f| %>

<% if @user.errors.any? %>
  <h2>Errors:</h2>
<ul>
<% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
<% end %>
</ul>
<% end %>

  Username: <%= f.text_field :username  %><br />
  Email : <%= f.email_field  :email, placeholder: "emaple@yahoo.com" %><br />
  Password : <%= f.password_field :password %><br />
  <%= f.submit %>
<% end %>
